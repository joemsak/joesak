<%= form_tag(sessions_path) do %>
  <div class='row'>
    <%= label_tag :username %>
    <%= text_field_tag :username %>
  </div>

  <div class='row'>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>

  <div class='row'>
    <%= submit_tag t('forms.buttons.sessions.sign_in'), class: 'button' %>
  </div>
<% end %>
